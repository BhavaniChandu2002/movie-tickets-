    <script>
        // JavaScript for functionality
        let selectedMovie = null;
        let selectedDate = null;
        let selectedTime = null;
        let selectedSeats = [];
        let ticketPrice = 0;

        // Initialize seats
        function initializeSeats() {
            const seatsGrid = document.getElementById('seatsGrid');
            const occupiedSeats = [12, 13, 25, 26, 27, 35, 36, 45, 46, 47, 48]; // Pre-occupied seats
            
            for (let i = 1; i <= 80; i++) {
                const seat = document.createElement('div');
                seat.className = 'seat';
                seat.textContent = i;
                seat.dataset.seat = i;
                
                if (occupiedSeats.includes(i)) {
                    seat.classList.add('occupied');
                } else {
                    seat.addEventListener('click', () => toggleSeat(seat, i));
                }
                
                seatsGrid.appendChild(seat);
            }
        }

        // Toggle seat selection
        function toggleSeat(seatElement, seatNumber) {
            if (seatElement.classList.contains('occupied')) return;
            
            if (seatElement.classList.contains('selected')) {
                seatElement.classList.remove('selected');
                selectedSeats = selectedSeats.filter(seat => seat !== seatNumber);
            } else {
                seatElement.classList.add('selected');
                selectedSeats.push(seatNumber);
            }
            
            updateSummary();
        }

        // Movie selection
        document.getElementById('moviesGrid').addEventListener('click', (e) => {
            const movieCard = e.target.closest('.movie-card');
            if (!movieCard) return;
            
            // Remove previous selection
            document.querySelectorAll('.movie-card').forEach(card => {
                card.classList.remove('selected');
            });
            
            // Select new movie
            movieCard.classList.add('selected');
            selectedMovie = {
                name: movieCard.querySelector('.movie-title').textContent,
                price: parseInt(movieCard.dataset.price)
            };
            ticketPrice = selectedMovie.price;
            
            updateSummary();
        });

        // Date selection
        document.getElementById('dateGrid').addEventListener('click', (e) => {
            const dateBtn = e.target.closest('.date-btn');
            if (!dateBtn) return;
            
            document.querySelectorAll('.date-btn').forEach(btn => {
                btn.classList.remove('selected');
            });
            
            dateBtn.classList.add('selected');
            selectedDate = dateBtn.dataset.date;
            
            updateSummary();
        });

        // Time selection
        document.getElementById('timeGrid').addEventListener('click', (e) => {
            const timeBtn = e.target.closest('.time-btn');
            if (!timeBtn) return;
            
            document.querySelectorAll('.time-btn').forEach(btn => {
                btn.classList.remove('selected');
            });
            
            timeBtn.classList.add('selected');
            selectedTime = timeBtn.textContent;
            
            updateSummary();
        });

        // Update booking summary
        function updateSummary() {
            const summary = document.getElementById('bookingSummary');
            const bookBtn = document.getElementById('bookBtn');
            
            if (selectedMovie && selectedDate && selectedTime && selectedSeats.length > 0) {
                summary.style.display = 'block';
                
                document.getElementById('summaryMovie').textContent = selectedMovie.name;
                document.getElementById('summaryDateTime').textContent = `${selectedDate} at ${selectedTime}`;
                document.getElementById('summarySeats').textContent = selectedSeats.sort((a, b) => a - b).join(', ');
                document.getElementById('summaryTickets').textContent = selectedSeats.length;
                document.getElementById('totalAmount').textContent = `$${selectedSeats.length * ticketPrice}`;
                
                bookBtn.disabled = false;
            } else {
                if (selectedSeats.length === 0 && (selectedMovie || selectedDate || selectedTime)) {
                    summary.style.display = 'block';
                    bookBtn.disabled = true;
                } else if (!selectedMovie && !selectedDate && !selectedTime) {
                    summary.style.display = 'none';
                }
            }
        }

        // Book tickets
        document.getElementById('bookBtn').addEventListener('click', () => {
            if (selectedMovie && selectedDate && selectedTime && selectedSeats.length > 0) {
                alert(`üéâ Booking Confirmed!\n\nMovie: ${selectedMovie.name}\nDate: ${selectedDate}\nTime: ${selectedTime}\nSeats: ${selectedSeats.join(', ')}\nTotal: $${selectedSeats.length * ticketPrice}\n\nEnjoy your movie! üçø`);
                
                // Reset booking
                selectedMovie = null;
                selectedDate = null;
                selectedTime = null;
                selectedSeats = [];
                
                // Reset UI
                document.querySelectorAll('.movie-card, .date-btn, .time-btn').forEach(el => {
                    el.classList.remove('selected');
                });
                document.querySelectorAll('.seat.selected').forEach(seat => {
                    seat.classList.remove('selected');
                });
                document.getElementById('bookingSummary').style.display = 'none';
            }
        });

        // Initialize the app
        initializeSeats();
    </script>
